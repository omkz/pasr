<h1>Listing</h1>

<table>
  <thead>
  <tr>
    <th>ID </th>
    <th>Title</th>
    <th>Image</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= image_tag(product.image.variant(resize_to_fill: [60, 60]), class: "img-fluid") if product.image.attached? %></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_product_path %>
