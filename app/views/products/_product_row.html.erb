<div class="container">
  <div class="row">
    <% @products.each do |product| %>
        <div class="col-lg-3 mb-4">
          <%= link_to product do %>
            <div class="card product h-100">
              <%= image_tag(product.image.variant(resize_to_fill: [192, 192]), class: "card-img-top") if product.image.attached? %>
              <div class="card-body">
                <p class="card-text"><%= product.name %></p>
              </div>
              <div class="card-footer">
                <small class="text-muted">Price: <%= product.price %></small>
              </div>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
